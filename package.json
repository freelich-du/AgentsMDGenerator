{
  "name": "agents-md-generator",
  "displayName": "AGENTS.md Generator",
  "description": "Generate AGENTS.md files for folders using GitHub Copilot Chat",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "AgentsMDGenerator.generateAgentsMd",
        "title": "Generate AGENTS.md files for all folders",
        "icon": "$(file-add)"
      },
      {
        "command": "AgentsMDGenerator.refreshTree",
        "title": "Refresh AGENTS.md Tree",
        "icon": "$(refresh)"
      },
      {
        "command": "AgentsMDGenerator.openAgentsMd",
        "title": "Open AGENTS.md"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "agentsTreeView",
          "name": "AGENTS.md Status",
          "icon": "media/icon.svg",
          "contextualTitle": "AGENTS.md Generator"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "AgentsMDGenerator.generateAgentsMd",
          "when": "view == agentsTreeView",
          "group": "navigation"
        },
        {
          "command": "AgentsMDGenerator.refreshTree",
          "when": "view == agentsTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "AgentsMDGenerator.openAgentsMd",
          "when": "view == agentsTreeView && viewItem == folder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
